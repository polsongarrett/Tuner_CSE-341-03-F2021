    <link rel="stylesheet" href="/css/auth.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <h1>Signup</h1>
                <!-- Following if statement checks for the errorMessage variable called from our 'signup' function in tuner.js. If there it displays it.-->
                <% if (errorMessage) { %>
                    <div class="user-message user-message--error"><%- errorMessage %></div> <!-- here I had to use '-' in <%- errorMessage %> and not the '=' because I am using unescaped HTML in my auth.js controller to show a link. -->
                <% } %>
        <form class="login-form" action="/signup" method="POST">
            <div class="form-control">
                <label for="firstName">First Name</label>
                <input 
                    class=""
                    type="text" 
                    name="firstName" 
                    id="firstName" 
                    value="">
            </div>
            <div class="form-control">
                <label for="lastName">Last Name</label>
                <input 
                    class=""
                    type="text" 
                    name="lastName" 
                    id="lastName" 
                    value="">
            </div>
            <div class="form-control">
                <label for="email">E-Mail</label>
                <input type="email" name="email" id="email" value="">
            </div>
            <div class="form-control">
                <label for="password">Password</label>
                <input type="password" name="password" id="password" value="">
            </div>
            <div class="form-control">
                <label for="confirmPassword">Confirm Password</label>
                <input type="password" name="confirmPassword" id="confirmPassword" value="">
                <!-- code used by Stephen for errors went here -->
            </div>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button class="btn" type="submit">Signup</button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>